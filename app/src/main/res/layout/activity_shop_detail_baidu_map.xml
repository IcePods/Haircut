<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lu.thebarbershop.Activity.ShopDetailBaiduMap">
    <com.baidu.mapapi.map.MapView
        android:id="@+id/shop_detail_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true">

    </com.baidu.mapapi.map.MapView>
    <Button
        android:id="@+id/baidu_map_back"
        android:layout_width="75dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        android:textColor="#fff"
        android:text="返回"
        android:background="#e0000000"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#fff"
        android:orientation="vertical">
        <TextView
            android:id="@+id/baidu_map_shopname"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="古川造型"
            android:textSize="17sp"
            android:textColor="#000"/>
        <TextView
            android:id="@+id/baidu_map_address"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="裕华区万达广场2号门建华大街与槐岭路交口西行100米路北"
            android:textColor="#8C8C8C"
            android:textSize="10dp"/>
    </LinearLayout>
</RelativeLayout>
