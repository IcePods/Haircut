<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/user_index_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/user_index_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="石家庄▼"
                android:gravity="center"
                android:layout_weight="1.8"
                android:layout_marginLeft="1dp"/>

            <LinearLayout
                android:id="@+id/user_index_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.7"

                android:background="@drawable/search">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:src="@mipmap/user_index_search_button"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:hint="你想搜索啥" />

            </LinearLayout>

            <ImageView
                android:id="@+id/user_index_plus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:src="@mipmap/user_index_plus_button"/>

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/user_index_header">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/user_index_viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <android.support.v4.view.ViewPager
                        android:id="@+id/user_index_viewpager_content"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"></android.support.v4.view.ViewPager>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/user_index_forselect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/user_index_viewpager">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/user_index_hirecut"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:src="@mipmap/user_index_hirecolor"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="剪发"
                                android:textSize="15sp"
                                android:gravity="center"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/user_index_hirecolor"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:src="@mipmap/user_index_hirecolor"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="染发"
                                android:textSize="15sp"
                                android:gravity="center"/>
                        </LinearLayout><LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/user_index_perm"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@mipmap/user_index_perm"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="烫发"
                            android:textSize="15sp"
                            android:gravity="center"/>
                    </LinearLayout><LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/user_index_nurse"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@mipmap/user_index_nurse"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="护理"
                            android:textSize="15sp"
                            android:gravity="center"/>
                    </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/user_index_message"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_below="@+id/user_index_forselect">


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/user_person_index_lvshop"
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:layout_below="@+id/user_index_message">

                    <ListView
                        android:id="@+id/user_person_index_lvshop_content"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </ListView>

                </RelativeLayout>



            </RelativeLayout>

        </ScrollView>
    </RelativeLayout>


</RelativeLayout>
