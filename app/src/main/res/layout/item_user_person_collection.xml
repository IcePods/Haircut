<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/listborder"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">
        <ImageView
            android:id="@+id/user_person_collection_shop_headr_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/user_person_headimg"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_toRightOf="@+id/user_person_collection_shop_headr_img"
            android:layout_marginLeft="10dp"
            android:paddingTop="3dp">
            <TextView
                android:id="@+id/user_person_collection_shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="17sp"
                android:text="0317老沧州火锅鸡"/>
            <TextView
                android:id="@+id/user_person_collection_shop_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:textSize="14sp"
                android:text="怀特商城 火锅"/>
        </RelativeLayout>
        <Button
            android:id="@+id/user_person_collection_shop_Fdelete"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:paddingTop="15px"
            android:paddingBottom="15px"
            android:layout_alignBottom="@+id/user_person_collection_shop_headr_img"
            android:text="删除"
            android:textSize="10sp"
            android:textColor="#000000"/>
    </RelativeLayout>
</LinearLayout>