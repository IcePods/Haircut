<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/user_shopdetail_picture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@mipmap/user_index_perm"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.8"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/user_shopdetail_shopname"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="MIX美发沙龙"
                android:textStyle="bold"
                android:layout_weight="2"
                android:textSize="18dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/user_shopdetail_address"/>
                <TextView
                    android:id="@+id/user_shopdetail_shopaddress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="石家庄建设南大街与石家庄中国南大街交叉口南行120米路东"
                    android:maxEms="11"
                    android:ellipsize="end"/>

            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/user_shopdetail_introduce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我们用双手成就你的装逼梦想" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
