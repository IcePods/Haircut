<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lu.thebarbershop.Activity.UserShopDetailActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/user_shop_detail_header"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">
        <ImageButton
            android:id="@+id/user_shop_detail_back_imgbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/user_shaop_detail_back"
            android:layout_marginLeft="15dp"
            android:background="#00000000"
            />
        <TextView
            android:id="@+id/user_shopdetail_header_shopname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="17sp"
            android:text="安德造型"
            android:textColor="#4D4D4D"/>
        <ImageButton
            android:id="@+id/user_shopdetail_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/user_shop_detail_collect_un"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:background="#00000000"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/user_shop_detail_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/user_shop_detail_header"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:id="@+id/user_shop_detail_viewpager"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <android.support.v4.view.ViewPager
                        android:id="@+id/user_shop_detail_viewpager_content"
                        android:layout_width="match_parent"
                        android:layout_height="200dp">
                    </android.support.v4.view.ViewPager>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:orientation="vertical"
                        android:layout_alignParentBottom="true"
                        android:padding="5dp"
                        android:background="#00000000"
                        android:gravity="center_horizontal">

                    <LinearLayout
                        android:id="@+id/user_shop_detail_ll_point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        />
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/user_shop_detail_viewpager">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/user_shop_detail_address_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="7dp">
                        <ImageButton
                            android:id="@+id/user_shop_detail_location_imgbtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/user_shopdetail_loaction"
                            android:background="#00000000"/>
                        <Button
                            android:id="@+id/user_shop_detail_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:text="河北师范大学一食堂后侧"
                            android:maxEms="10"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:background="#00000000"
                            android:textSize="12dp"
                            android:textColor="#121212"/>
                        <ImageButton
                            android:id="@+id/user_shop_detail_address_right_imgbtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:background="#00000000"
                            android:src="@mipmap/user_shopdetail_location_right"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/user_shop_detail_phone_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/user_shop_detail_address_content"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp">
                        <ImageButton
                            android:id="@+id/user_shop_detail_phone_imgbtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/user_shop_detail_phone"
                            android:background="#00000000"/>
                        <Button
                            android:id="@+id/user_shop_detail_phone_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:background="#00000000"
                            android:text="18332163762"
                            android:textSize="15dp"
                            android:textColor="#121212"/>
                        <ImageButton
                            android:id="@+id/user_shop_detail_phone_right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:background="#00000000"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/user_shopdetail_location_right"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/user_shop_detail_production"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/user_shop_detail_phone_content"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp">
                        <ImageButton
                            android:id="@+id/user_shop_detail_production_imgbtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/user_shop_detail_production"
                            android:background="#00000000"/>
                        <Button
                            android:id="@+id/user_shop_detail_production_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:background="#00000000"
                            android:text="作品展示"
                            android:textSize="15dp"
                            android:textColor="#121212"/>
                        <ImageButton
                            android:id="@+id/user_shop_detail_production_right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:background="#00000000"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/user_shopdetail_location_right"/>
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/user_shopdetail_describe"
                        android:layout_width="200dp"
                        android:layout_margin="50dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/user_shop_detail_production"
                        android:layout_centerHorizontal="true"
                        android:text="很多内容很多内容很多内容很多内容很多内容很多内容很多内容很多内容很多
                       内容很多内容很多内容很多内容很多内容"/>

                    <RelativeLayout
                        android:id="@+id/user_shop_detail_baber_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/user_shopdetail_describe">
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/user_shop_detail_barber_recyclerView"
                            android:scrollbars="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>

        </ScrollView>

    </RelativeLayout>

</RelativeLayout>